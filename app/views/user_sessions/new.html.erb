<fieldset>
    <legend>Login</legend>
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= render 'shared/error_messages', :target => @user_session %>
  <p>
  <%= f.label :login %><br />
  <%= f.text_field :login %>
  </p>
  <p>
  <%= f.label :password %><br />
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>
  <p>
  <%= f.submit "Login" %> 
  </p>
<% end %>
</fieldset>
